<div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
            <div class="card">
                <div class="card-body p-12">
                    <h4 class="text-center mb-4 pb-2">Welcome to Chat Room</h4>

                    @using (Html.BeginForm("CreateChat", "ChatRoom", FormMethod.Post , new {  id = "commentForm" }))
                    {

                        <div class="container my-10 py-10 text-dark">
                            <div class="row d-flex justify-content-center">
                                <div class="col-md-12 col-lg-12 col-xl-12">
                                    <div class="card">
                                        <div class="card-body p-4">
                                            <div class="d-flex flex-start w-100">
                                                <img class="rounded-circle shadow-1-strong me-3"
                                                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(21).webp" alt="avatar" width="65"
                                                     height="65" />
                                                <div class="w-100">
                                                    <h5>Add your question</h5>

                                                    <div class="form-outline">
                                                        <textarea class="form-control"  rows="4" typeof="text" name="Text" id="commentContent" placeholder="Enter question here..." required></textarea>


                                                        
                                                    </div>
                                                    <div class="d-flex justify-content-between mt-3">

                                                        @*<button type="button" class="btn btn-danger">
                                                                Send <i class="fas fa-long-arrow-alt-right ms-1"></i>
                                                            </button>*@
                                                        <input type="submit" value="Send" class="btn btn-success" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @foreach (var chatRoom in Model)
                    {


                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-start">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="data:image/jpeg;base64," alt="avatar" width="65"
                                         height="65" />
                                    <div class="flex-grow-1 flex-shrink-1">
                                        <div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <p class="mb-1" style="color:black;">
                                                    @chatRoom.Account.Name <span class="small">- @Html.DisplayFor(modelItem => chatRoom.ChatDate)</span>
                                                </p>
                                                <a href="#!"><i class="fas fa-reply fa-xs"></i><span class="small"> reply</span></a>
                                            </div>
                                            <p class="small mb-0" style="color:black;">
                                                @Html.DisplayFor(modelItem => chatRoom.Text)
                                            </p>
                                            <div class="d-flex flex-row fs-12">
                                                <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"></i><span class="ml-1">Like</span></div>
                                                <div class="like p-2 cursor"><i class="fa fa-commenting-o"></i><span class="ml-1">Comment</span></div>
                                                <div class="like p-2 cursor"><i class="fa fa-share"></i><span class="ml-1">Share</span></div>
                                            </div>
                                        </div>

                                        @foreach (var repli in chatRoom.Replies)
                                        {
                                            <div class="d-flex flex-start mt-4">
                                                <a class="me-3" href="#">
                                                    <img class="rounded-circle shadow-1-strong"
                                                         src="data:image/jpeg;base64," alt="avatar"
                                                         width="65" height="65" />
                                                </a>
                                                <div class="flex-grow-1 flex-shrink-1">
                                                    <div>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <p class="mb-1" style="color:black;">
                                                                @repli.Account.Name <span class="small">- @repli.ChatDate</span>
                                                            </p>
                                                        </div>
                                                        <p class="small mb-0" style="color:black;">
                                                            @repli.Text
                                                        </p>
                                                    </div>
                                                    <div class="d-flex flex-row fs-12">
                                                        <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"></i><span class="ml-1">Like</span></div>
                                                        <div class="like p-2 cursor"><i class="fa fa-commenting-o"></i><span class="ml-1">Comment</span></div>
                                                        <div class="like p-2 cursor"><i class="fa fa-share"></i><span class="ml-1">Share</span></div>
                                                    </div>
                                                </div>
                                            </div>
                                        }



                                    </div>
                                </div>
                                <div class="post">
                                    @using (Html.BeginForm("Create", "ChatRoom", FormMethod.Post))
                                    {
                                        <input class="inputText" type="text" name="Reply" placeholder="Reply here" required></input>
                                        <input type="hidden" name="CID" value="@chatRoom.Id" />
                                        <input type="submit" value="Reply" class="btn btn-success" />
                                    }
                                </div>
                            </div>
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    .gradient-custom { /* fallback for old browsers */
        background: #4facfe; /* Chrome 10-25,
                            Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, rgba(79, 172, 254, 1), rgba(0, 242, 254, 1)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+,
                            Safari 7+ */
        background: linear-gradient(to bottom right, rgba(79, 172, 254, 1), rgba(0, 242, 254, 1))
    }

    .inputText {
        width: 270px;
        height: 40px;
    }

    .post {
        margin-top: 10px;
        margin-left: 70px;
    }

    .chatt {
        margin-top: 15px;
    }

    .rounded-0 {
        margin-left: 20px;
        margin-top: 15px;
    }

    body {
        background-color: #74EBD5;
        background-image: linear-gradient(90deg, #74EBD5 0%, #9FACE6 100%);
        min-height: 100vh;
    }

    ::-webkit-scrollbar {
        width: 5px;
    }

    ::-webkit-scrollbar-track {
        width: 5px;
        background: #f5f5f5;
    }

    ::-webkit-scrollbar-thumb {
        width: 1em;
        background-color: #ddd;
        outline: 1px solid slategrey;
        border-radius: 1rem;
    }

    .text-small {
        font-size: 0.9rem;
    }

    .messages-box,
    .chat-box {
        height: 510px;
        overflow-y: scroll;
    }

    .rounded-lg {
        border-radius: 0.5rem;
    }

    input::placeholder {
        font-size: 0.9rem;
        color: #999;
    }
</style>
<script>
    document.getElementById('commentForm').addEventListener('submit', function(event) {
        var commentContent = document.getElementById('commentContent').value.trim();
        if (commentContent === "") {
            alert("Chat cannot be empty");
            event.preventDefault();
        }
    });
</script>