@model ProjectFClean.Models.Renter

@{
    ViewBag.Title = "FClean";
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<html>
    <body>
        <div class="container">
            <div class="Rent">
                <div class="row">
                    <div class="col-md-4">
                        <div class="img-Renter">
                            <img src="~/img/@Model.Account.ImgAvatarID" alt="Renter Image" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="Name-Renter">
                            <h2>
                                @Html.DisplayFor(model => model.Account.Name)
                            </h2>
                        </div>
                        <div class="Line"></div>
                        <div class="Detail">
                            <div class="Service">
                                <div class="Address">
                                    @Html.DisplayNameFor(model => model.Address)
                                    <span>:</span>
                                    @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "value" } })

                                </div>
                            </div>
                            <div class="Line"></div>
                            <div class="Information">
                                <h2>Information</h2>
                            </div>
                            <div class="Age">
                                Age: @Html.DisplayFor(model => model.Age)
                            </div>
                            <div class="Gender">
                                Gender: @Html.DisplayFor(model => model.Gender)
                            </div>
                            <div class="Description">
                                Description: @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
<style>
    
    .Rent {
        margin-top: 50px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        padding: 20px;
    }

    .img-Renter img {
        width: 288px;
        height: 276px;
        border-radius: 24px;
        object-fit: cover;
        border: 1px solid black;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    .Name-Renter {
        font-size: 24px;
        font-weight: bold;
        margin-top: 20px;
        color:black;
    }

    .Detail {
        margin-top: 20px;
    }

    .Line {
        width: 100%;
        height: 1px;
        background-color: #000;
        margin: 20px 0;
    }   

    .Age, .Gender, .Description  {
        margin-top: 10px;
        font-size: 18px;
        font-weight:bold;
    }
    .Service {
        font-size: 20px;
        font-weight: bold;
    }
</style>

