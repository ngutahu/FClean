@using Newtonsoft.Json
@model ProjectFClean.Controllers.PostsController.PostIndexViewModel

@{
    ViewBag.Title = "FClean";
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
}
<body>
    <div>
        <!-- Posts Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <!-- Search Start -->
                <div class="search-post">
                    <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
                        <div class="container">
                            <div class="row g-2">
                                <div class="col-md-10">
                                    <div class="row g-2">
                                        <div class="col-md-3">
                                            <select id="gender1" class="form-select border-0" name="gender">
                                                <option value="">Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <select id="location1" class="form-select border-0" name="location">
                                                <option value="">Location</option>
                                                <option value="Liên Chiểu">Liên Chiểu</option>
                                                <option value="Hải Châu">Hải Châu</option>
                                                <option value="Ngũ Hành Sơn">Ngũ Hành Sơn</option>
                                                <option value="Sơn Trà">Sơn Trà</option>
                                                <option value="Cẩm Lệ">Cẩm Lệ</option>
                                                <option value="Thanh Khê">Thanh Khê</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <input id="name1" type="text" class="form-control border-0" placeholder="Name" name="name">
                                        </div>

                                        <div class="col-md-3">
                                            <select id="service1" class="form-select border-0" name="service">
                                                <option value="">Service</option>
                                                @foreach (var item in Model.ListService)
                                                {
                                                    <option value="@item.Name_of_service">@item.Name_of_service</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button id="searchBtn1" class="btn btn-dark border-0 w-100"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Search End -->
                <!-- Heading Start -->
                <div class="container-heading">
                    <h1 class="text-center mb-5 wow fadeInUp" id="header-post" data-wow-delay="0.1s">Post Listing</h1>
                    <a class="btn btn-primary" href="~/Posts/Create" id="btn-add">Create a Post</a>
                </div>
                <!-- Heading End -->
                <!-- Sort Select Start-->
                @*<select id="sortSelect" class="form-select" aria-label="Default select example">
                        <option selected> Sort</option>
                        <option value="1">Price Ascending</option>
                        <option value="2">Price Decrease</option>
                        <option value="3">Date Decrease</option>
                    </select>*@
                <!-- Sort Select End-->
                <!-- Table Start -->
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>Location</th>
                                <th>Date post</th>
                                <th>Job</th>
                                <th id="action">Action</th>
                            </tr>
                        </thead>
                        <tbody id="listpost">
                            @foreach (var post in Model.ListPost)
                            {
                                <tr>

                                    <td>
                                        @post.Service.Name_of_service
                                    </td>

                                    <td>
                                        @if (post.Account != null)
                                        {
                                            <span>@post.Account.Name</span>
                                        }
                                        else
                                        {
                                            <span>Unknown</span>
                                        }
                                    </td>
                                    <td>@post.Price</td>
                                    <td>@post.Location</td>
                                    <td>@post.DatePost</td>
                                    <td>
                                        @if (post.Account.Role == "Renter")
                                        {
                                            <span>Cần tuyển</span>
                                        }
                                        else if (post.Account.Role == "Housekeeper")
                                        {
                                            <span>Cần việc</span>
                                        }
                                    </td>
                                    <td id="btn-detail-apply">
                                        <a href="@Url.Action("DetailsPost", "Posts", new { pid = post.PID })" class="btn btn-primary">Apply Now</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Table End -->

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>

    <!-- Các đoạn mã JavaScript -->
    <script>
    $(document).ready(function () {
        $('#searchBtn1').click(function () {
            $.ajax({
                url: '@Url.Action("Search", "Posts")',
                type: 'GET',
                data: {
                    gender: $('#gender1').val(),
                    location: $('#location1').val(),
                    name: $('#name1').val(),
                    service: $('#service1').val()
                },
                success: function (result) {
                    $('#listpost').html(result);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });
    });
    </script>


    <script>
    // Xử lý sự kiện khi thay đổi tùy chọn sắp xếp
    $(document).ready(function () {
        $('#sortSelect').change(function () {
            var selectedOption = $(this).val(); // Lấy giá trị tùy chọn được chọn

            // Gửi yêu cầu sắp xếp bằng AJAX
            $.ajax({
                url: '@Url.Action("Sort", "Posts")',
                type: 'GET',
                data: { sortOption: selectedOption },
                success: function (result) {
                    // Cập nhật danh sách bài đăng với kết quả sắp xếp mới
                    $('#listpost').html(result);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });
    });
    </script>
</body>

<style>
    .post-item {
        display: flex;
        justify-content: space-between;
        padding-left: 100px;
        align-items: flex-end;
    }


    .list-item-post {
        display: flex;
        padding: 15px;
        gap: 15px;
    }


    .container-heading {
        display: flex;
        justify-content: space-between;
    }

    #btn-add {
        height: 40px;
    }

    #header-post {
        margin-left: 500px;
    }

    h5.mb-3 {
        margin-right: 200px;
    }

    i.fa.fa-map-marker-alt.text-primary.me-2 {
        margin-left: 10px;
    }

    tbody tr:nth-child(even) {
        background-color: white;
    }

    tbody tr:nth-child(odd) {
        background-color: white;
    }

    .table th,
    .table td {
        padding: 10px;
        text-align: justify;
        font-size: 20px;
        color: black;
    }

    #action {
        text-align: center;
    }

    #btn-detail-apply {
        display: flex;
        justify-content: space-around;
        border: none;
    }

    #sortSelect {
        margin-bottom: 10px;
        width: 100px;
        border-radius: 10px;
    }
</style>

